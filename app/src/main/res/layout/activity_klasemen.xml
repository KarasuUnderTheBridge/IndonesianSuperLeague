<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KlasemenActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_utama"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        />

    <LinearLayout
        android:id="@+id/table_head"
        android:layout_below="@id/title"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomor_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="No"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/nama_text"
            android:layout_width="150dp"
            android:text="Nama"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/main_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="Ma"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/menang_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="M"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/seri_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="S"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/kalah_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="K"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/goal_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="G"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/kebobolan_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="GK"
            android:textSize="20sp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/poin_text"
            android:layout_width="30dp"
            android:textAlignment="center"
            android:text="P"
            android:textSize="20sp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view1"
        android:layout_below="@id/table_head"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>